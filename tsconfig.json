{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "baseUrl": ".", // ⭐ belangrijk
    "paths": {
      "@/*": ["src/*"], // ⭐ nu correct
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src",
    "../shared",
    "src/components/PeriodSelector/components/MonthList.tsx",
    "src/components/PeriodSelector/components/FilterPanel.tsx",
    "src/components/PeriodSelector/PeriodSelector.tsx",
    "src/components/PeriodSelector/components/WeekList.tsx",
    "src/components/PeriodSelector/components/YearList.tsx"
  ]
}
